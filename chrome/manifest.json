{
  "manifest_version": 3,
  "name": "Pin Tab Shortcut",
  "version": "1.0.0",
  "description": "Press Alt+P to pin the current tab (Option+P on Mac). Shortcut is configurable.",
  "homepage_url": "https://github.com/stefansundin/duplicate-tab",
  "author": "Nathan Nguyen",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "service_worker": "sw.js"
  },
  "options_ui": {
    "page": "popup.html"
  },
  "action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Configure Pin Tab Shortcut",
    "default_popup": "popup.html"
  },
  "commands": {
    "pin-tab": {
      "suggested_key": { "default": "Alt+P" },
      "description": "Pin the current tab"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "commands"
  ],
  "minimum_chrome_version": "96"
}
